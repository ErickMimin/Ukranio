	g++ -c bibliotecas/Solicitud.cpp

cliente: PaqueteDatagrama.o SocketDatagrama.o Solicitud.o cliente.cpp
	g++ PaqueteDatagrama.o SocketDatagrama.o Solicitud.o cliente.cpp -o cliente -I./bibliotecas

clean:
	rm -rf *.o cliente